{
  "name": "discuss-care",
  "description": "Discuss&Care, La solution de communication privee, dediee, sur mesure et chiffree",
  "version": "5.6.1",
  "main": "./main.js",
  "author": "PRIVATE DISCUSS",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish never",
    "deploy": "electron-builder --publish always",
    "dist:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@electron/remote": "^2.0.1",
    "electron-context-menu": "^0.9.1",
    "electron-dl": "^1.14.0",
    "electron-progressbar": "^1.2.0",
    "electron-updater": "^4.3.8",
    "fs": "0.0.1-security",
    "i18next": "^19.9.2",
    "i18next-node-fs-backend": "^2.1.3",
    "image-data-uri": "^2.0.1",
    "offline-js": "^0.7.19",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "electron": "^15.1.1",
    "electron-builder": "^22.10.5",
    "electron-installer-dmg": "^3.0.0",
    "electron-notarize": "^1.0.0",
    "electron-packager": "^14.2.1",
    "electron-winstaller": "^4.0.2"
  },
  "build": {
    "appId": "com.discuss-care.piman",
    "mac": {
      "category": "productivity",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "./build/entitlements.mac.plist",
      "entitlementsInherit": "./build/entitlements.mac.inherit.plist"
    },
    "linux": {
      "icon": "build/icons/care-icon-512.png",
      "category": "productivity",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "icon": "./build/icon.ico",
      "target": "msi"
    },
    "directories": {
      "output": "app",
      "buildResources": "build"
    },
    "productName": "Discuss&Care",
    "afterSign": "/Users/kawtar/apps/discuss-care-update/notarize.js",
    "protocols": [
      {
        "name": "Discuss&Care",
        "schemes": [
          "discuss-care"
        ]
      }
    ]
  },
  "deploy": "electron-builder build --mac --win --publish always",
  "repository": {
    "type": "git",
    "url": "https://github.com/PrivateDiscuss/discuss-care-macos.git"
  },
  "mac": {
    "title": "Discuss&Care",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.inherit.plist",
    "afterSign": "/Users/kawtar/apps/discuss-care-update/notarize.js"
  },
  "mas": {
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.inherit.plist"
  }
}
