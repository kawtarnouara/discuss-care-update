{
  "name": "discuss-care",
  "description": "Discuss&Care, La solution de communication privee, dediee, sur mesure et chiffree",
  "version": "5.4.7",
  "main": "./main.js",
  "author": "PRIVATE DISCUSS",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish never",
    "deploy": "electron-builder --publish always",
    "dist:linux": "electron-builder --linux"
  },
  "dependencies": {
    "about-window": "^1.13.4",
    "@electron/remote": "^2.0.1",
    "electron-context-menu": "^0.9.1",
    "electron-dl": "^1.12.0",
    "electron-progressbar": "^1.1.0",
    "electron-updater": "^4.3.5",
    "electron-windows-badge": "^1.1.0",
    "fs": "0.0.1-security",
    "i18next": "^19.7.0",
    "i18next-node-fs-backend": "^2.1.3",
    "image-data-uri": "^2.0.0",
    "offline-js": "^0.7.19",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "electron": "^15.1.1",
    "electron-builder": "^22.10.5",
    "electron-installer-dmg": "^3.0.0",
    "electron-notarize": "^1.0.0",
    "electron-packager": "^14.1.0",
    "electron-winstaller": "^4.0.0"
  },
  "build": {
    "appId": "com.discuss-care.piman",
    "mac": {
      "category": "productivity",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "./build/entitlements.mac.plist",
      "entitlementsInherit": "./build/entitlements.mac.inherit.plist"
    },
    "linux": {
      "icon": "build/icons/care-icon-512.png",
      "category": "productivity",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "verifyUpdateCodeSignature": "false",
      "icon": "./build/icon.ico",
      "target": "nsis",
      "certificateSubjectName": "SECURED BY PIMAN SECURITY SAS",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "publisherName": "PRIVATE DISCUSS",
      "signAndEditExecutable": true
    },
    "directories": {
      "output": "app",
      "buildResources": "build"
    },
    "productName": "Discuss&Care",
    "protocols": [
      {
        "name": "Discuss&Care",
        "schemes": [
          "discuss-care"
        ]
      }
    ]
  },
  "deploy": "electron-builder build --mac --win --publish always",
  "repository": {
    "type": "git",
    "url": "https://github.com/PrivateDiscuss/discuss-care-windows.git"
  },
  "mac": {
    "title": "Discuss&Care",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.inherit.plist"
  },
  "mas": {
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.inherit.plist"
  }
}
